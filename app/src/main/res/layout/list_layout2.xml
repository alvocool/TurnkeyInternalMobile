<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/scale_16_dim"
    android:paddingStart="@dimen/scale_16_dim"
    android:paddingRight="@dimen/scale_16_dim"
    android:paddingEnd="@dimen/scale_16_dim"
    android:paddingLeft="@dimen/scale_16_dim">

    <TextView
        android:id="@+id/list2item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/scale_14"
        android:textColor="@color/gray"
        android:textStyle="normal"/>
    <TextView
        android:id="@+id/list2item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/scale_16"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
</LinearLayout>